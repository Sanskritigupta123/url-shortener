<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            color: #333;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>Welcome to the URL Shortener Service</h1>
    <% if(locals.shortID) { %>
        <p>URL generated : http://localhost:8001/url/<%= shortID %> </p>
    <% } %>
   <div>
        <form method="POST" action="/url">
            <label>Enter ur original url</label>
            <input type="text" name="url" placeholder="Enter URL here https://example.com" required />
            <button type="submit">Shorten URL</button>
        </form>
   </div>
   <div>
        <% if(locals.urls) { %>
            <table>
                <thead>
                    <th>S. No.</th>
                    <th>shortIDsssssssssss</th>
                    <th>Redirect URLssssssssssssssss</th>
                    <th>Visit History</th>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => {  %>
                        <tr>
                        <td><%= index+1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectUrl %></td>
                        <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
   </div>
</body>
</html>